<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_below="@+id/calender"
    android:layout_marginTop="30dp"
    android:background="@android:drawable/dialog_holo_dark_frame">

    <TextView android:id="@+id/info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Datum"
        android:textColor="@color/white"
        android:background="@color/darkGreen"/>


    <TextView android:id="@+id/info_hours_worked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_header"
        android:text="00:00"
        android:textSize="120sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView android:id="@+id/info_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timmar/Minuter"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/info_hours_worked"
        android:layout_alignParentStart="true" />

</RelativeLayout>